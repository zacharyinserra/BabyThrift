<div style="width: 1000px; text-align: center; margin: auto; padding-top: 50px;">
  <h2>Shop by Category</h2>
</div>

<!-- Cards -->
<div class="cards">

  <!-- Clothing -->
  <div class="card" style="width: 18rem;">
    <img style="background-image: url('images/clothes.jpg')" class="card-img-top" alt="">
    <div class="card-body">
      <h5 class="card-title">Clothing</h5>
      <p class="card-text">Shop our excellent selection of clothing items!</p>
      <a href="/shop/Clothing" class="btn btn-primary">Browse Clothing</a>
    </div>
  </div>

  <!-- Toys -->
  <div class="card" style="width: 18rem;">
    <img style="background-image: url('images/toys.jpg')" class="card-img-top" alt="">
    <div class="card-body">
      <h5 class="card-title">Toys</h5>
      <p class="card-text">Explore safe, clean, and stimulating toys!</p>
      <a href="/shop/Toys" class="btn btn-primary">Browse Toys</a>
    </div>
  </div>

  <!-- Furniture -->
  <div class="card" style="width: 18rem;">
    <img style="background-image: url('images/furniture.jfif')" class="card-img-top" alt="">
    <div class="card-body">
      <h5 class="card-title">Furniture</h5>
      <p class="card-text">Find exactly what you're looking for!</p>
      <a href="/shop/Furniture" class="btn btn-primary">Browse Furniture</a>
    </div>
  </div>

  <!-- Strollers -->
  <div class="card" style="width: 18rem;">
    <img style="background-image: url('images/stroller.jpg')" class="card-img-top" alt="">
    <div class="card-body">
      <h5 class="card-title">Strollers</h5>
      <p class="card-text">Go mobile with one of our strollers!</p>
      <a href="/shop/Strollers" class="btn btn-primary">Browse Strollers</a>
    </div>
  </div>
</div>

<!-- All Items -->
<div style="width: 1000px; text-align: center; margin: auto; padding-top: 50px;">
  <h2>Browse all of our products!</h2>
</div>

<div class="shop-items">
  <% itemList.forEach(function(item) { %>
  <a class="shop-item-links" href="/item/<%= item.id %>">
    <div class="shop-item">
      <div class="itemTitle">
        <p><%= item.name %></p>
      </div>
      <div class="itemImage">
        <img
          src="https://kuiperbeltofbabies.s3.us-east-2.amazonaws.com/item-images/<%= item.picture.toString().split(";")[0] %>"
          alt="picture">
      </div>
      <div>
        <p>$<%= item.price %></p>
        <hr>
        <p><b>Seller:</b> Yo mama</p>
        <p><b>Location:</b> <%= item.city %>, <%= item.state %></p>
      </div>
      <div class="shop-item-overlay">
        <button>View Details</button>
      </div>
    </div>
  </a>
  <% }); %>
</div>

<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">

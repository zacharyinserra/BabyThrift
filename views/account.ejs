<%- include('partials/header') %>
<!-- Register/Login/Cart -->
<div class="register">
    <% if (check) { %>
    <a class="btn btn-light btn-med" href="/account" role="button">Account</a>
    <a class="btn btn-dark btn-med" href="/logout" role="button">Logout</button>
        <% } else { %>
        <a class="btn btn-light btn-med" href="/register" role="button">Register</a>
        <button class="btn btn-dark btn-med" onclick="openLogin()">Login</button>
        <% } %>

        <a class="btn btn-light btn-med" href="#" role="button">CART</a>
</div>
</div>

<div class="upload-item">
    <form class="form-inline" method="GET" action="item-upload">
        <label for="sellbutt">Have something you want to sell?</label>
        <button id="sellbutt" type="submit" class="btn btn-primary mb-2">Sell it!</button>
    </form>
</div>

<div class="account-content">
    <a class="account-item orders" href="/pending-orders">
        <h2 class="account-link">Your orders</h2>
    </a>
    <a class="account-item items" href="/items-for-sale">
        <h2 class="account-link">Your listed items</h2>
    </a>
    <a class="account-item settings" href="/account-settings">
        <h2 class="account-link">Account settings</h2>
    </a>
</div>

<!-- Recent orders and uploaded items -->
<!-- <div class="recent"> -->
<div class="recent-orders">
    <div class="order">

    </div>
    <button class="expand-button">View all orders</button>
</div>
<div class="recent-items">
    <div class="account-user-item">
        <% itemList.forEach(function(item) { %>
        <a class="account-shop-item-links" href="/item/<%= item.id %>">
            <div class="account-shop-item">
                <div class="itemTitle">
                    <p><%= item.name %></p>
                </div>
                <div class="itemImage">
                    <img src="https://kuiperbeltofbabies.s3.us-east-2.amazonaws.com/item-images/<%= item.picture.toString().split(";")[0] %>"
                        alt="picture">
                </div>
                <div>
                    <p>$<%= item.price %></p>
                    <hr>
                    <p><b>Seller:</b> Yo mama</p>
                    <p><b>Location:</b> <%= item.city %>, <%= item.state %></p>
                </div>
            </div>
        </a>
        <% }); %>
    </div>
    <button class="expand-button">View of your items</button>
</div>
<!-- </div> -->

<%- include('partials/footer') %>